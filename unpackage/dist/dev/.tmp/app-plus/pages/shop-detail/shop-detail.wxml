<view><view class="pl-2"><view class="text-dark">{{shop.name}}</view><view class="text-light-muted">{{shop.info}}</view></view><view class="bg-white px-2"><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="d-flex a-center py-3 border-bottom border-light-secondary"><image class="border border-light-secondary rounded p-2 flex-shrink" style="height:150rpx;width:150rpx;" src="{{item.image}}" mode="widthFix"></image><view class="flex-1 d-flex flex-column pl-2"><view class="text-dark" style="font-size:35rpx;">{{''+item.name+''}}</view><view class="d-flex text-light-muted mb-1"><text class="mr-1">{{"已卖："+item.sellNum}}</text></view><view class="mt-auto d-flex j-sb"><price vue-id="{{'1-'+index}}" bind:__l="__l" vue-slots="{{['default']}}">{{item.price}}</price><view class="a-self-end"><uni-number-box vue-id="{{'2-'+index}}" min="{{item.min}}" value="0" max="{{item.max}}" data-event-opts="{{[['^change',[['changeNum',['$event','$0',index],[[['goodsList','',index]]]]]]]}}" bind:change="__e" bind:__l="__l"></uni-number-box></view></view></view></view></block></view><view class="d-flex a-center position-fixed left-0 right-0 bottom-0 border-top border-light-secondary a-stretch" style="height:100rpx;z-index:1000;"><view class="flex-1 d-flex a-center j-center font-md">合计<price vue-id="3" bind:__l="__l" vue-slots="{{['default']}}">{{totalPrice}}</price></view><view class="flex-1 d-flex a-center j-center main-bg-color text-white font-md" hover-class="main-bg-hover-color" data-event-opts="{{[['tap',[['submitPrice',['$event']]]]]}}" bindtap="__e">结算</view></view></view>